{
  "name": "react-ts-boilerplate",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn tcm-watch & webpack-dev-server --open --mode development --inline --hot --localhost --config build/webpack.config.dev.js",
    "prebuild": "tcm src/css",
    "build": "webpack --mode production --config build/webpack.config.prod.js",
    "tcm-watch": "tcm -w src/css",
    "test": "jest --coverage",
    "fmt": "yarn tslint --fix & yarn stylelint --fix & yarn prettier",
    "prettier": "prettier --write './**/*.{ts,tsx,css,yml,js}'",
    "lint": "yarn tslint && yarn stylelint",
    "tslint": "tslint -p tsconfig.json 'src/ts/*.{ts,tsx}'",
    "stylelint": "stylelint './src/**/*.css'"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.12",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.2",
    "css-loader": "^2.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.17.0",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-standard": "^18.3.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typed-css-modules": "^0.4.2",
    "typescript": "^3.4.5",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "yarn run fmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
